<!-- app/views/spaces/search.html.erb -->

<h1>Résultats de la recherche</h1>

<% if @spaces.any? %>
  <% @spaces.each do |space| %>
    <div class="card mb-3">
      <div class="card-header">
        <h3><%= space.title %></h3>
      </div>
      <div class="card-body">
        <p><%= space.description %></p>
        <p><strong>Adresse :</strong> <%= space.address %>, <%= space.city %>, <%= space.department %></p>
        <p><strong>Capacité :</strong> <%= space.capacity %> personnes</p>
        <p><strong>Prix :</strong> <%= number_to_currency(space.price) %></p>
      </div>
      <div class="card-footer">
        <%= link_to 'Voir les détails', space_path(space), class: 'btn btn-primary' %>
        <% if user_signed_in? && current_user.client? %>
          <%= link_to 'Réserver', new_space_booking_path(space), class: 'btn btn-success' %>
        <% else %>
          <p class="text-muted">Connectez-vous en tant que client pour réserver cet espace.</p>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>Aucun espace trouvé pour votre recherche.</p>
<% end %>

<!-- Bouton Retour -->
<div class="text-center mt-4">
  <%= link_to 'Retour', root_path, class: 'btn btn-secondary' %>
</div>
