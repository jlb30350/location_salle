<!-- app/views/rooms/search.html.erb -->

<h1>Résultats de la recherche</h1>

<% if @rooms.any? %>
  <% @rooms.each do |room| %>
    <div class="card mb-3">
      <div class="card-header">
        <h3><%= room.title %></h3>
      </div>
      <div class="card-body">
        <p><%= room.description %></p>
        <p><strong>Adresse :</strong> <%= room.address %>, <%= room.city %>, <%= room.department %></p>
        <p><strong>Capacité :</strong> <%= room.capacity %> personnes</p>
        <p><strong>Prix :</strong> <%= number_to_currency(room.price) %></p>
      </div>
      <div class="card-footer">
        <%= link_to 'Voir les détails', room_path(room), class: 'btn btn-primary' %>
        <% if user_signed_in? && current_user.client? %>
          <%= link_to 'Réserver', new_room_booking_path(room), class: 'btn btn-success' %>
        <% else %>
          <p class="text-muted">Connectez-vous en tant que client pour réserver cet eroom.</p>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>Aucun eroom trouvé pour votre recherche.</p>
<% end %>

<!-- Bouton Retour -->
<div class="text-center mt-4">
  <%= link_to 'Retour', root_path, class: 'btn btn-secondary' %>
</div>
