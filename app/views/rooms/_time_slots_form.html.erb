<!-- app/views/rooms/_time_slots_form.html.erb -->
<h3>Créneaux horaires pour le <%= date %></h3>
<p>Avant : <%= time_before %></p>
<p>Après : <%= time_after %></p>

<!-- Formulaire pour réserver le créneau -->
<form action="/reservations/new" method="get">
  <input type="hidden" name="date" value="<%= date %>">
  <input type="hidden" name="time_before" value="<%= time_before %>">
  <input type="hidden" name="time_after" value="<%= time_after %>">
  <button type="submit">Réserver ce créneau</button>
</form>
