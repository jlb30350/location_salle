(function() {
  var script = document.createElement('script');
  script.src = 'https://maps.googleapis.com/maps/api/js?key=<%= @api_key %>&libraries=places&callback=initMap';
  script.async = true;
  script.defer = true;
  document.head.appendChild(script);
})();