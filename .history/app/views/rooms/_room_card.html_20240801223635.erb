# app/views/rooms/_room_card.html.erb

<div class="card">
  <div class="card-header">
    <h3><%= space.title %></h3>
  </div>
  <div class="card-body">
    <p><%= space.description %></p>
    <p><strong>Adresse :</strong> <%= space.address %></p>
    <p><strong>Département :</strong> <%= space.department %></p>
    <p><strong>Type de salle :</strong> <%= space.space_type.present? ? space.space_type.capitalize : 'Type inconnu' %></p>
    <p><strong>Prix :</strong> <%= number_to_currency(space.price) %></p>
    <p><strong>Type de lieu :</strong> <%= space.location_type.present? ? space.location_type.capitalize : 'Type inconnu' %></p>
    <p><strong>Nombre de tables :</strong> <%= space.tables_count %></p>
    <p><strong>Nombre de chaises :</strong> <%= space.chairs_count %></p>
    <p><strong>Étage :</strong> <%= space.floor %></p>
    <p><strong>Ascenseur :</strong> <%= space.has_elevator ? 'Oui' : 'Non' %></p>
    <p><strong>Climatisation :</strong> <%= space.has_air_conditioning ? 'Oui' : 'Non' %></p>
    <p><strong>Fontaine à eau :</strong> <%= space.has_water_fountain ? 'Oui' : 'Non' %></p>
    <p><strong>Parking disponible :</strong> <%= space.has_parking ? 'Oui' : 'Non' %></p>
    <p><strong>WiFi disponible :</strong> <%= space.has_wifi ? 'Oui' : 'Non' %></p>
    <p><strong>Cuisine disponible :</strong> <%= space.has_kitchen ? 'Oui' : 'Non' %></p>
    <p><strong>Système de sonorisation :</strong> <%= space.has_sound_system ? 'Oui' : 'Non' %></p>
    <p><strong>Accessible en fauteuil roulant :</strong> <%= space.wheelchair_accessible ? 'Oui' : 'Non' %></p>
    <p><strong>Capacité :</strong> <%= space.capacity %></p>
    <% if space.photos.attached? %>
      <div class="photos">
        <% space.photos.each do |photo| %>
          <%= image_tag photo, class: "img-fluid" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <%= link_to 'Voir les détails', space_path(space), class: 'btn btn-primary' %>
  </div>
</div>